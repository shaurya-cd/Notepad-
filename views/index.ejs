<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-md outline-none " type="text" name="title" placeholder="Title goes here">
                <textarea class="block px-5 mt-2 py-2 bg-zinc-800  w-full rounded-md outline-none resize-none" name="details" placeholder="Write your task here"></textarea>
                <input class="mt-2 bg-blue-600 rounded-md px-5 py-2" type="submit" value="Create task ">
            </form>
        </div>
        <div class="tasks flex gap-3 flex-wrap p-10">
            <% if(files.length>0){ %>
                <% files.forEach((val)=>{ %>
                    <div class="task min-w-72 px-3 py-4 rounded-md bg-zinc-800">
                        <h1 class="text-white text-3xl tracking-tighter"><%= val %></h1>
                        <div class="flex justify-between w-full item-center mt-3">
                            <a class="text-blue-500 inline-block" href="/files/<%= val %>">Read more.</a>
                            <a class="text-zinc-600" href="/edit/<%= val %>">Edit Filename</a>
                        </div>
                    </div>
                <% }) %>
            <% } else {%>
                <h1 class="text-zinc-600">No task yet.</h1>
            <% } %>            
        </div>
    </div>
</body>
</html>